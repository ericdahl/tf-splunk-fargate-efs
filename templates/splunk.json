[
  {
    "name": "splunk",
    "image": "ericdahl/splunk-efs:ae19b77",
    "portMappings": [
      {
        "containerPort": 8000,
        "hostPort": 8000,
        "protocol": "tcp"
      },
      {
        "containerPort": 8088,
        "hostPort": 8088,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "SPLUNK_START_ARGS",
        "value": "--accept-license"
      },
      {
        "name": "SPLUNK_PASSWORD",
        "value": "password"
      }
    ],
    "mountpoints": [
      {
        "sourceVolume": "opt-splunk",
        "containerPath": "/opt/splunk/var"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "tf_splunk_fargate_efs",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "splunk"
      }
    }
  }
]
