[
  {
    "name": "splunk",
    "image": "amazonlinux:2",
    "portMappings": [
      {
        "containerPort": 8000,
        "hostPort": 8000,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "SPLUNK_START_ARGS",
        "value": "--accept-license"
      },
      {
        "name": "SPLUNK_PASSWORD",
        "value": "password"
      }
    ],
    "mountpoints": [
      {
        "sourceVolume": "opt-splunk",
        "containerPath": "/opt/"
      }
    ],
    "command": ["python", "-m", "SimpleHTTPServer", "8000"]
  }
]
